<Window x:Class="PulseTune.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PulseTune" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="PulseTune - Sistem İzleme" FontSize="24" FontWeight="Bold" Margin="10"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                    <ComboBox x:Name="ProfileComboBox" Width="150" SelectedIndex="0" SelectionChanged="ProfileComboBox_SelectionChanged">
                        <ComboBoxItem Content="Normal Profil"/>
                        <ComboBoxItem Content="Oyun Profili"/>
                        <ComboBoxItem Content="Enerji Tasarruf"/>
                        <ComboBoxItem Content="Ofis/Verimlilik"/>
                    </ComboBox>
                    <Button Content="Hızlı Tarama" Margin="10,0,0,0" Padding="10,5" Click="QuickScan_Click"/>
                </StackPanel>
            </Grid>
            
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border BorderBrush="LightGray" BorderThickness="1" Margin="5" Padding="10" Grid.Column="0">
                    <StackPanel>
                        <TextBlock Text="CPU" FontWeight="Bold"/>
                        <TextBlock x:Name="CpuUsageText" Text="Kullanım: %" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border BorderBrush="LightGray" BorderThickness="1" Margin="5" Padding="10" Grid.Column="1">
                    <StackPanel>
                        <TextBlock Text="RAM" FontWeight="Bold"/>
                        <TextBlock x:Name="RamUsageText" Text="Kullanım: %" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border BorderBrush="LightGray" BorderThickness="1" Margin="5" Padding="10" Grid.Column="2">
                    <StackPanel>
                        <TextBlock Text="Disk" FontWeight="Bold"/>
                        <TextBlock x:Name="DiskUsageText" Text="Kullanım: %" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border BorderBrush="LightGray" BorderThickness="1" Margin="5" Padding="10" Grid.Column="3">
                    <StackPanel>
                        <TextBlock Text="Ağ" FontWeight="Bold"/>
                        <TextBlock x:Name="NetworkUsageText" Text="Kullanım: 0 KB/s" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
        
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="İşlemler">
                <ListView x:Name="ProcessListView" Margin="5">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="İşlem Adı" Width="180" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="CPU %" Width="100">
                                <GridViewColumn.DisplayMemberBinding>
                                    <Binding Path="CpuUsage" StringFormat="{}{0:F1}%"/>
                                </GridViewColumn.DisplayMemberBinding>
                            </GridViewColumn>
                            <GridViewColumn Header="Bellek (MB)" Width="100">
                                <GridViewColumn.DisplayMemberBinding>
                                    <Binding Path="MemoryMB" StringFormat="{}{0:F1}"/>
                                </GridViewColumn.DisplayMemberBinding>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="İşlemi Sonlandır" Click="EndProcess_Click"/>
                            <MenuItem Header="Daha Fazla Bilgi" Click="ProcessDetails_Click"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>
            </TabItem>
            
            <TabItem Header="Grafikler">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Row="0" Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                        <Grid>
                            <TextBlock Text="CPU Grafiği" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
                            <Canvas x:Name="CpuCanvas" Margin="10,30,10,10" Background="Black"/>
                        </Grid>
                    </Border>
                    
                    <Border Grid.Row="0" Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                        <Grid>
                            <TextBlock Text="RAM Grafiği" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
                            <Canvas x:Name="RamCanvas" Margin="10,30,10,10" Background="Black"/>
                        </Grid>
                    </Border>
                    
                    <Border Grid.Row="1" Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                        <Grid>
                            <TextBlock Text="Disk Grafiği" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
                            <Canvas x:Name="DiskCanvas" Margin="10,30,10,10" Background="Black"/>
                        </Grid>
                    </Border>
                    
                    <Border Grid.Row="1" Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                        <Grid>
                            <TextBlock Text="Ağ Grafiği" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
                            <Canvas x:Name="NetworkCanvas" Margin="10,30,10,10" Background="Black"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <TabItem Header="Başlangıç">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ListView x:Name="StartupItemsListView" Grid.Row="0" Margin="5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Program" Width="200" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Konum" Width="250" DisplayMemberBinding="{Binding Path}"/>
                                <GridViewColumn Header="Durumu" Width="100" DisplayMemberBinding="{Binding IsEnabled}"/>
                                <GridViewColumn Header="Etki" Width="100" DisplayMemberBinding="{Binding Impact}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                        <Button Content="Etkinleştir" Click="EnableStartup_Click" Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="Devre Dışı Bırak" Click="DisableStartup_Click" Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="Yenile" Click="RefreshStartup_Click" Padding="10,5"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Servisler">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ListView x:Name="ServicesListView" Grid.Row="0" Margin="5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Servis" Width="200" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Açıklama" Width="250" DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Header="Durum" Width="100" DisplayMemberBinding="{Binding Status}"/>
                                <GridViewColumn Header="Başlangıç Türü" Width="150" DisplayMemberBinding="{Binding StartupType}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                        <Button Content="Başlat" Click="StartService_Click" Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="Durdur" Click="StopService_Click" Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="Yenile" Click="RefreshServices_Click" Padding="10,5"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Öneriler">
                <ListBox x:Name="TipsListBox" Margin="5"/>
            </TabItem>
        </TabControl>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button Content="Güncelle" Click="UpdateStats" Padding="10,5" Margin="0,0,10,0"/>
            <Button Content="Oto Güncelleme" x:Name="AutoUpdateButton" Click="ToggleAutoUpdate" Padding="10,5"/>
            <TextBlock x:Name="StatusText" Margin="10,5" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>